# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://carduser:cardpass123@localhost:5432/card_segmentation
POSTGRES_USER=carduser
POSTGRES_PASSWORD=cardpass123
POSTGRES_DB=card_segmentation

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Keys (Optional but recommended for higher rate limits)
POKEMON_TCG_API_KEY=your_pokemon_tcg_api_key_here
SCRYFALL_API_KEY=not_required_but_can_be_used_for_identification

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=card_segmentation

# Weights & Biases (Optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=trading-card-segmentation

# Storage Paths
DATA_ROOT_PATH=/app/data
MODEL_STORAGE_PATH=/app/models
LOG_PATH=/app/logs

# Training Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# CVAT Configuration (if using annotation service)
CVAT_HOST=localhost
CVAT_PORT=8080
CVAT_USERNAME=admin
CVAT_PASSWORD=admin_password

# Cloud Storage (Optional - for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-west-2
# S3_BUCKET_NAME=card-segmentation-data

# GCP_PROJECT_ID=your_gcp_project
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCS_BUCKET_NAME=card-segmentation-data

# Azure Storage (Optional)
# AZURE_STORAGE_ACCOUNT=your_storage_account
# AZURE_STORAGE_KEY=your_storage_key
# AZURE_CONTAINER_NAME=card-segmentation-data
